<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <ul>
      <% docs.forEach(function(vaga){ %>
        <li>
          |
          <a href="/edit/<%= vaga._id %>">
            <%= vaga.titulo %>
          </a>
          <a href="/edit/<%= vaga._id %>">
            <%= vaga.valor %>
          </a>
          <a href="/edit/<%= vaga._id %>">
            <%= vaga.tipo %>
          </a>
          <a href="/edit/<%= vaga._id %>">
            <%= vaga.empresa.nome %>
          </a>
          <a href="/edit/<%= vaga._id %>">
            <%= vaga.empresa.cnpj %>
          </a>
          |
          <a href="/delete/<%= vaga._id %>" 
            onclick="return confirm('Tem certeza que deseja excluir?');">
            X
          </a>
        </li>
      <% }) %>
    </ul>
    <hr />
    <a href="/new">Cadastrar nova vaga</a>
  </body>
</html>